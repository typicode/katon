{
  "name": "katon",
  "version": "0.4.1",
  "description": "Automatically start your Node based projects and serve them locally on .ka domains",
  "keywords": [
    "node",
    "pow",
    "nodemon",
    "development",
    ".dev",
    ".ka",
    "local",
    "automatic",
    "server",
    "start",
    "restart",
    "reload"
  ],
  "author": "Typicode <typicode@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/typicode/katon.git"
  },
  "bugs": {
    "url": "https://github.com/typicode/katon/issues"
  },
  "bin": {
    "katon": "./bin/index.js"
  },
  "preferGlobal": true,
  "scripts": {
    "test": "mocha --reporter spec --globals i --compilers coffee:coffee-script/register ./test/**/*",
    "prepublish": "grunt build",
    "postinstall": "cat ./doc/update.txt && ./bin/index.js install",
    "preuninstall": "./bin/index.js uninstall"
  },
  "devDependencies": {
    "coffee-script": "^1.7.1",
    "grunt": "^0.4.4",
    "grunt-cli": "^0.1.13",
    "grunt-coffeelint": "0.0.8",
    "grunt-contrib-clean": "^0.5.0",
    "grunt-contrib-coffee": "^0.10.1",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-mocha-test": "^0.10.0",
    "mocha": "^1.18.2",
    "sinon": "^1.9.0"
  },
  "dependencies": {
    "chalk": "~0.4.0",
    "clone": "^0.1.11",
    "eco": "*",
    "fs.extra": "^1.2.1",
    "http-proxy": "^1.1.2",
    "minimatch": "^0.2.14",
    "node-static": "~0.7.3",
    "nodemon": "~1.0.8",
    "pad": "0.0.4",
    "respawn-group": "^0.5.0",
    "shelljs": "^0.2.6",
    "tildify": "^0.2.0",
    "update-notifier": "~0.1.7",
    "native-dns": "^0.6.1",
    "portfinder": "^0.2.1"
  },
  "license": "MIT"
}
